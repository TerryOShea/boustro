{
    "name": "Boustro",
    "version": "1.0",
    "description": "An extension to transform text on web pages into boustrophedons.",
    "permissions": ["activeTab", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "images/boustro16.png",
            "32": "images/boustro32.png",
            "48": "images/boustro48.png",
            "128": "images/boustro128.png"
        },
        "default_title": "Boustro"
    },
    "icons": {
        "16": "images/boustro16.png",
        "32": "images/boustro32.png",
        "48": "images/boustro48.png",
        "128": "images/boustro128.png"
    },
    "web_accessible_resources": [
        "styles.css"
    ],
    "manifest_version": 2
}
